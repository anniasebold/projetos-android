<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_dog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cachorro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a idade do seu cachorro, para descobrir a idade dele em anos humanos"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/image_dog"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/activity_editText_idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/activity_button_calcularIdade"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_editText_idade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Calcular" />

    <TextView
        android:id="@+id/activity_text_idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_button_calcularIdade"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="35dp"
        android:text="Digite a idade acima"/>


</RelativeLayout>