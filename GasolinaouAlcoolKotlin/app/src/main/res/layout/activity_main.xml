<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:maxHeight="81dp"
        android:maxWidth="300dp"
        android:minHeight="81dp"
        android:minWidth="300dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/preco_Alcool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço Alcool"
        android:layout_below="@id/image_logo"
        android:layout_margin="30dp"
        android:textSize="25dp"/>
    
    <TextView
        android:id="@+id/preco_Gasolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço Gasolina"
        android:layout_below="@id/image_logo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="200dp"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/activity_preco_Alcool"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preco_Gasolina"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_text2"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <EditText
        android:id="@+id/activity_text_preco_Gasolina"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preco_Gasolina"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_text2"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <Button
        android:id="@+id/activity_button_verificar"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="100dp"
        android:text="Verificar" />

    <TextView
        android:id="@+id/activity_texto_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Texto Resultado"
        android:layout_below="@+id/activity_button_verificar"
        android:layout_marginLeft="100dp"/>

</RelativeLayout>