<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/activity_editText"
        android:layout_width="@dimen/width"
        android:layout_height="360dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:background="@drawable/fundo_anotacao"
        android:ems="10"
        android:gravity="start"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="30sp"
        android:paddingRight="5dp"
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/activity_botao_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_editText"
        android:layout_alignStart="@+id/activity_editText"
        android:layout_below="@+id/activity_editText"
        app:srcCompat="@drawable/botao_salvar" />
</RelativeLayout>